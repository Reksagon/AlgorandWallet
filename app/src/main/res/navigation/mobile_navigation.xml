<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_wallet">

    <fragment
        android:id="@+id/navigation_wallet"
        android:name="com.algorand.wallet.ui.wallet.WalletFragment"
        android:label="@string/title_wallet"
        tools:layout="@layout/fragment_wallet" />

    <fragment
        android:id="@+id/navigation_news"
        android:name="com.algorand.wallet.ui.news.NewsFragment"
        android:label="@string/title_news"
        tools:layout="@layout/fragment_news" />

    <fragment
        android:id="@+id/navigation_swap"
        android:name="com.algorand.wallet.ui.swap.SwapFragment"
        android:label="@string/title_swap"
        tools:layout="@layout/fragment_swap" />
    <fragment
        android:id="@+id/navigation_transactions"
        android:name="com.algorand.wallet.ui.transactions.TransactionsFragment"
        android:label="fragment_transactions"
        tools:layout="@layout/fragment_transactions" />
    <fragment
        android:id="@+id/navigation_recieve"
        android:name="com.algorand.wallet.ui.wallet.RecieveFragment"
        android:label="fragment_recieve"
        tools:layout="@layout/fragment_recieve" />
    <fragment
        android:id="@+id/navigation_send"
        android:name="com.algorand.wallet.ui.wallet.SendFragment"
        android:label="fragment_send"
        tools:layout="@layout/fragment_send" />
</navigation>