<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.wallet.WalletFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:fontFamily="@font/roboto"
                    android:text="Swap"
                    android:textColor="#000000"
                    app:layout_constraintEnd_toEndOf="@+id/bttn_swap"
                    app:layout_constraintStart_toStartOf="@+id/bttn_swap"
                    app:layout_constraintTop_toBottomOf="@+id/bttn_send" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26dp"
                    android:layout_marginTop="21dp"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="My Wallet:"
                    android:textColor="#326799"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/textview_bg"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:text="RF7WNLCâ€¦J54ALLM"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="@+id/textView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView"
                    app:layout_constraintTop_toTopOf="@+id/textView" />

                <View
                    android:id="@+id/view"
                    android:layout_width="0dp"
                    android:layout_height="204dp"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/ic_info_section"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/textView5"
                    app:layout_constraintStart_toStartOf="@+id/textView"
                    app:layout_constraintTop_toBottomOf="@+id/textView"
                    app:layout_constraintVertical_bias="0.0" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/bttn_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:clickable="true"
                    android:src="@drawable/ic_send"
                    android:theme="@style/FloatingButton"
                    android:tint="@color/black"
                    app:backgroundTint="#FFFFFF"
                    app:fabSize="normal"
                    app:layout_constraintEnd_toStartOf="@+id/bttn_recieve"
                    app:layout_constraintStart_toStartOf="@+id/view"
                    app:layout_constraintTop_toBottomOf="@+id/view"
                    tools:ignore="SpeakableTextPresentCheck" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/bttn_swap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:clickable="true"
                    android:src="@drawable/ic_swap_2"
                    android:theme="@style/FloatingButton"
                    android:tint="@color/black"
                    app:backgroundTint="#FFFFFF"
                    app:fabSize="normal"
                    app:layout_constraintEnd_toEndOf="@+id/view"
                    app:layout_constraintStart_toEndOf="@+id/bttn_recieve"
                    app:layout_constraintTop_toBottomOf="@+id/view"
                    tools:ignore="SpeakableTextPresentCheck" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/bttn_recieve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:clickable="true"
                    android:src="@drawable/ic_recieve"
                    android:theme="@style/FloatingButton"
                    android:tint="@color/black"
                    app:backgroundTint="#FFFFFF"
                    app:fabSize="normal"
                    app:layout_constraintEnd_toEndOf="@+id/view"
                    app:layout_constraintStart_toStartOf="@+id/view"
                    app:layout_constraintTop_toBottomOf="@+id/view"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:fontFamily="@font/roboto"
                    android:text="Send"
                    android:textColor="#000000"
                    app:layout_constraintEnd_toEndOf="@+id/bttn_send"
                    app:layout_constraintStart_toStartOf="@+id/bttn_send"
                    app:layout_constraintTop_toBottomOf="@+id/bttn_send" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:fontFamily="@font/roboto"
                    android:text="Recieve"
                    android:textColor="#000000"
                    app:layout_constraintEnd_toEndOf="@+id/bttn_recieve"
                    app:layout_constraintStart_toStartOf="@+id/bttn_recieve"
                    app:layout_constraintTop_toBottomOf="@+id/bttn_send" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="1dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:text="Last Transaction"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.github.nikartm.button.FitButton
                    android:id="@+id/btn_transactions"
                    android:layout_width="154dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="13dp"
                    android:layout_marginEnd="13dp"
                    android:enabled="true"
                    android:gravity="center|center_vertical"
                    app:fb_backgroundColor="@color/active"
                    app:fb_cornerRadius="34dp"
                    app:fb_divHeight="40dp"
                    app:fb_iconHeight="28dp"
                    app:fb_iconMarginEnd="16dp"
                    app:fb_iconMarginStart="20dp"
                    app:fb_iconPosition="left"
                    app:fb_iconWidth="28dp"
                    app:fb_shape="rectangle"
                    app:fb_text="Open transaction list"
                    app:fb_textColor="#FFFFFF"
                    app:fb_textSize="12sp"
                    app:fb_textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.72"
                    tools:ignore="TouchTargetSizeCheck" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_no_transactions_found" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="64dp"
                android:src="@drawable/ic_your_r" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>